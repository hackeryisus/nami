<style type="text/css">
    body {
          background-color: #DADADA;
        }
          body > .grid {
            height: 100%;
          }
          .image {
            margin-top: -100px;
          }
          .column {
            max-width: 450px;
          }
</style>
<div class="ui middle aligned center aligned grid">
    <div class="column">
        <h2 class="ui teal image header">
            <div class="content">
                Acceder a tu Cuenta
            </div>
        </h2>
        <form action="/usuarios/ingresar" class="ui large form" method="post">
            <div class="ui stacked segment">
                <div class="field">
                    <div class="ui left icon input">
                        <i class="user icon">
                        </i>
                        <input name="username" placeholder="Apodo" type="text">
                        </input>
                    </div>
                </div>
                <div class="field">
                    <div class="ui left icon input">
                        <i class="lock icon">
                        </i>
                        <input name="password" placeholder="ContraseÃ±a" type="password">
                        </input>
                    </div>
                </div>                                
                <input class="ui fluid large teal submit button" type="submit" value="Entrar">
                </input>
            </div>
            <input name="_csrf" type="hidden" value="{{csrfToken}}" />
            
        </form>
        {{#if hasErrors}}
            <div class="ui error message">
                <div class="header">
                    Error
                </div>
                <ul class="list">
                    {{#each messages}}
                        <li>
                            {{this}}
                        </li>
                    {{/each}}
                </ul>
            </div>
           
        {{/if}}
         <div class="ui message">
                No tienes una cuenta?
                <a href="/users/register">
                    Crear Cuenta
                </a>
        </div>
    </div>
</div>
